<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F8"
    tools:context=".Checkout">

    <EditText
        android:id="@+id/editTextText9"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/dni"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#F7F9F8"
        android:contentDescription="@string/volver_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageButton
        android:id="@+id/shoppingCartButton"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F7F9F8"
        android:contentDescription="@string/ir_al_carrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shoppingcarticon" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageCompraEnvio"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:contentDescription="@string/imagen_cami_n"
            app:srcCompat="@drawable/compra_envio"
            app:tint="@color/paymentAproved"
            tools:ignore="ImageContrastCheck" />
        <!-- app:tint="@color/colorViolet" -->

        <ImageView
            android:id="@+id/imageCompraPoint1"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_punto"
            app:srcCompat="@drawable/compra_point"
            app:tint="@color/colorGray3" />

        <ImageView
            android:id="@+id/imageCompraPoint2"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_punto"
            app:srcCompat="@drawable/compra_point"
            app:tint="@color/colorGray3" />

        <ImageView
            android:id="@+id/imageCompraPoint3"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_punto"
            app:srcCompat="@drawable/compra_point"
            app:tint="@color/colorGray3" />

        <ImageView
            android:id="@+id/imageCompraPoint4"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_punto"
            app:srcCompat="@drawable/compra_point"
            app:tint="@color/colorGray3" />

        <ImageView
            android:id="@+id/imageCompraPago"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:contentDescription="@string/imagen_de_tarjeta"
            app:srcCompat="@drawable/compra_pago"
            app:tint="@color/colorGray3" />
        <!-- app:tint="@color/colorViolet" -->

        <ImageView
            android:id="@+id/imageCompraPoint5"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_punto"
            app:srcCompat="@drawable/compra_point"
            app:tint="@color/colorGray3" />

        <ImageView
            android:id="@+id/imageCompraPoint6"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_punto"
            app:srcCompat="@drawable/compra_point"
            app:tint="@color/colorGray3" />

        <ImageView
            android:id="@+id/imageCompraPoint7"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_punto"
            app:srcCompat="@drawable/compra_point"
            app:tint="@color/colorGray3" />

        <ImageView
            android:id="@+id/imageCompraPoint8"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_punto"
            app:srcCompat="@drawable/compra_point"
            app:tint="@color/colorGray3" />

        <ImageView
            android:id="@+id/imageCompraRealizada"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"
            android:contentDescription="@string/confirmacion_compra"
            app:srcCompat="@drawable/compra_realizada"
            app:tint="@color/colorGray3" />
        <!-- app:tint="@color/colorViolet" -->
    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_envioDatos_checkout"
        android:textColor="@color/color1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.891" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/hint_correoelectrónico_checkout"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/hint_códigoarea_checkout"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupEnvio"
        app:layout_constraintEnd_toStartOf="@+id/editTextText4"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="202dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/hint_númerotelefono_checkout"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupEnvio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toEndOf="@+id/editTextText3"
        android:autofillHints="" />

    <RadioGroup
        android:id="@+id/radioGroupEnvio"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButtonRetiroLocal"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="@string/titulo_retiroLocal_checkout"
            android:textColor="@color/color1"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonEnvioDomicilio"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:text="@string/titulo_envíoDomicilio_checkout"
            android:textColor="@color/color1"
            android:textStyle="bold" />

    </RadioGroup>

    <EditText
        android:id="@+id/editTextText7"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/hint_provincia_checkout"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/botonPagar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toEndOf="@+id/editTextText6"
        tools:visibility="visible"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextText6"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/hint_localidad_checkout"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/botonVolver"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextText8"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/hint_códigopostal_checkout"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextText7"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="202dp"
        android:layout_height="48dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/hint_calleynúmero_checkout"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextText6"
        app:layout_constraintEnd_toStartOf="@+id/editTextText8"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_background_checkout"
        android:ems="10"
        android:hint="@string/hint_nombrecompleto_checkout"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="" />

    <Button
        android:id="@+id/botonPagar"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/color4"
        android:onClick="irapagar"
        android:text="@string/button_irPagar_chackout"
        android:textColor="@color/color5"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/botonVolver" />

    <Button
        android:id="@+id/botonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/color4"
        android:onClick="volverAtras"
        android:text="@string/button_volver_chackout"
        android:textColor="@color/color5"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>